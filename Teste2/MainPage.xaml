<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FingerprintComparisonApp.MainPage"
             Title="Página Principal">

    <StackLayout Padding="20" Spacing="20" VerticalOptions="Center" HorizontalOptions="Center">

        <!-- Título -->
        <Label Text="Impressão Digital"
               FontSize="24"
               HorizontalOptions="Center"
               FontAttributes="Bold" />

        <!-- Botão para Cadastro -->
        <Button Text="Cadastro"
                Clicked="OnCadastroButtonClicked"
                HorizontalOptions="Center"
                WidthRequest="200"
                Margin="0,20,0,0"/>

        <!-- Botão para Login -->
        <Button Text="Login"
                Clicked="OnLoginButtonClicked"
                HorizontalOptions="Center"
                WidthRequest="200"
                Margin="0,10,0,0"/>

    </StackLayout>
</ContentPage>